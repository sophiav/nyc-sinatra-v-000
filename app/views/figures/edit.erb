<h1>Update Figure</h1>

<form action="/figures/<%= @figure.id %>" method="POST">
  <label for="figure_name">Figure Name</label>
  <input id="figure_name" type="text" name="figure[name]" value="<%= @figure.name %>">

  <% @landmarks.each do |landmark| %>
    <p><input <%= 'checked' if @figure.landmarks.include?(landmark) %> id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>"> <%= landmark.name %></p>
  <% end %>

  <% @titles.each do |title| %>
    <p><input <%= 'checked' if @figure.titles.include?(title) %> id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>"> <%= title.name %></p>
  <% end %>

  <label for="new_title">New Title:</label>
  <input id="new_title" type="text" name="title[name]" >


 <label for="new_landmark">New Landmark:</label>
  <input id="new_landmark" type="text" name="landmark[name]" >


  <input type="submit" value="Edit Figure">
</form>